@model ProjetoDavin.Models.Contato

@{
  ViewData["Title"] = "Excluir Contato";
}

<h1>Excluir Contato</h1>

<h3>Tem certeza que deseja excluir este contato?</h3>
<div>
  <h4>Contato</h4>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Nome)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Nome)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Idade)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Idade)
    </dd>
    <dt class="col-sm-2">
      Telefones
    </dt>
    <dd class="col-sm-10">
      @foreach (var telefone in Model.Telefones)
      {
        <p>@telefone.Numero</p>
      }
    </dd>
  </dl>

  <form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Excluir" class="btn btn-danger" /> |
    <a asp-action="Index">Cancelar</a>
  </form>
</div>
